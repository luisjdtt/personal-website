<header
    class="flex items-center justify-between">
    <!-- Profile Image -->
    <a href="/" class="group">
        <img
            src="/assets/images/funnydoodle.webp"
            alt="Profile Picture"
            class="h-16 w-16 rounded-full transition-transform duration-300 ease-in-out group-hover:scale-110
                group-hover:animate-pulse"/>
    </a>
    <!-- Navigation Links -->
    <nav class="space-x-4">
        <a href="/" class="{% if page.url == '/' %}text-white {% else %}text-gray-300 hover:text-white{% endif %} relative group">
            Home
            <span class="absolute -bottom-1/4 left-0 {% if page.url == '/' %}w-full{% else %}w-0 group-hover:w-full{% endif %} h-0.5
                bg-white transition-all duration-300"></span>
        </a>
        <a href="/about/" class="{% if page.url == '/about/' %}text-white {% else %}text-gray-300 hover:text-white{% endif %} relative group">
            About Me
            <span class="absolute -bottom-1/4 left-0 {% if page.url == '/about/' %}w-full{% else %}w-0 group-hover:w-full{% endif %} h-0.5
                bg-white transition-all duration-300"></span>
        </a>
        <a href="/contact/" class="{% if page.url == '/contact/' %}text-white {% else %}text-gray-300 hover:text-white{% endif %} relative group">
            Contact
            <span class="absolute -bottom-1/4 left-0 {% if page.url == '/contact/' %}w-full{% else %}w-0 group-hover:w-full{% endif %}
                h-0.5 bg-white transition-all duration-300"></span>
        </a>
    </nav>
</header>